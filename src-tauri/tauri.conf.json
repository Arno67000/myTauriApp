{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "ng build",
        "beforeDevCommand": "ng serve",
        "devPath": "http://localhost:4200",
        "distDir": "../dist"
    },
    "package": {
        "productName": "my_app",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "deb": {
                "files": {
                    "/usr/lib/database": "../database/",
                    "usr/lib/assets": "../dist/"
                },
                "depends": []
            },
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "desktop",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": ["../database/data.db"],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "desktop",
                "width": 800
            }
        ]
    }
}

